<html>
	<head>
		<LINK rel="stylesheet" type="text/css" href="style.css">
		<meta charset="utf-8">
	</head>
	<script type="text/javascript" src="liste.js" ></script>
    <body>
		<div>
			<H1>Liste des taches</H1>
			<ul>
                {{# taches}}
					<form method="post" enctype="multipart/form-data">
				    	<li>
							{{libelle}}
							<input type="image" action="delTask()" src="img/suppr.png" class="img" id="suppr" name="taskSupr" ></input>
						 	<input onclick="delTask()" type="hidden" name="id"  value= {{id}} ></input>
						
						</li>
					</form>
						
                {{/ taches}}
			</ul>
		</div>
		<div>	
			<form method="post" enctype="multipart/form-data">
				<H1>Ajouter</H1>
				<libelle>Tache : </libelle>
				<input type="textarea" id="libTache" name="libTache"></input>
				<input type="submit" name="valider" id="valider" value="Valider" onclick="addTask(libTache.value)">
			<form>
		</div>
	</body>
</html>
